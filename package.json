{
  "private": true,
  "scripts": {
    "check": "yarn clean && yarn lint && yarn prepack:all && yarn test",
    "lint:fix": "yarn run eslint --fix . && yarn prettier:fix",
    "pretest": "tsc -b && ./scripts/pretest && yarn workspaces foreach --topological run pretest",
    "pretest:data": "psql -X1v ON_ERROR_STOP=1 -f postgraphile/postgraphile/__tests__/kitchen-sink-data.sql \"$TEST_DATABASE_URL\"",
    "test": "yarn workspaces foreach --topological run test",
    "posttest": "yarn workspaces foreach --topological run posttest && node scripts/benjies-depcheck.mjs",
    "prepack:all": "scripts/prepack-all",
    "build": "tsc -b && yarn && yarn workspace ruru prepack",
    "watch": "yarn build && tsc -b --watch",
    "clean": "jest --clearCache && rm -Rf {utils,grafast,graphile-build,postgraphile}/*/{dist,bundle,tsconfig.tsbuildinfo,tsconfig.build.tsbuildinfo}",
    "changelog": "(cat scripts/CHANGELOG_HEADER.md; npx conventional-changelog -p angular --release-count 0) > CHANGELOG.md",
    "changeset:version": "yarn changeset version && node scripts/postversion.mjs",
    "docs:gen": "yarn typedoc .",
    "w": "yarn workspace",
    "postgraphile": "cd postgraphile/postgraphile && node dist/cli-run.js",
    "-----": "-----",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --ignore-path ./.eslintignore",
    "prettier:all": "yarn prettier '**/*.{json,md,mdx,html,js,jsx,ts,tsx}'",
    "prettier:fix": "yarn prettier:all --write",
    "prettier:check": "yarn prettier:all --list-different"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@knodes/typedoc-plugin-monorepo-readmes": "^0.22.5",
    "@knodes/typedoc-plugin-pages": "^0.22.5",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@types/mock-fs": "4.13.1",
    "@types/node": "^18.15.5",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@typescript-eslint/typescript-estree": "^5.59.2",
    "babel-jest": "^28.1.3",
    "babel-plugin-transform-import-meta": "^2.2.0",
    "concurrently": "^6.5.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.9.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint_d": "^11.1.1",
    "glob": "^10.2.5",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "jest": "^28.1.3",
    "mock-fs": "^5.1.2",
    "pg": "^8.7.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.1",
    "typedoc": "^0.22.15",
    "typedoc-monorepo-link-types": "^0.0.2",
    "typescript": "^5.0.4",
    "webpack": "^5.65.0",
    "zx": "^7.2.3"
  },
  "workspaces": [
    "grafast/*",
    "graphile-build/*",
    "postgraphile/*",
    "utils/*"
  ],
  "engines": {
    "node": ">=14.17",
    "yarn": ">=1.3.2"
  },
  "packageManager": "yarn@4.0.0-rc.33",
  "dependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2"
  }
}
