#!/bin/bash

npm_bin=$(npm bin)

export DEBUG=${DEBUG-postgraphql*,-postgraphql:graphql,-postgraphql:postgres:explain}

$npm_bin/nodemon \
  --watch src \
  --ignore __tests__ \
  --ignore __mocks__ \
  --ext js,ts \
  --exec "$npm_bin/ts-node --ignore node_modules --disableWarnings src/postgraphql/cli.ts --schema a,b,c --show-error-stack json $@"
