{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "allowJs": false,
    "rootDir": "src",
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "lib": ["es2017", "esnext.asynciterable"]
  },
  "include": ["src"],
  "exclude": [
    "index.js",
    "plugins.d.ts",
    "node_modules",
    "build",
    "build-turbo",
    "examples",
    "utils",
    "resources",
    "src/postgraphile/graphiql",
    "__tests__",
    "**/__tests__",
    "*-test.js"
  ]
}
