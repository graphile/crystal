{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,

    "target": "es2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true
  },
  "exclude": ["node_modules", "dist", ".yarn"],
  "include": [],
  "references": [
    { "path": "packages/graphile-build" },
    { "path": "packages/graphile-build-pg" },
    { "path": "packages/graphile-utils" },
    { "path": "packages/graphql-parse-resolve-info" },
    { "path": "packages/jest-serializer-graphql-schema" },
    { "path": "packages/lds" },
    { "path": "packages/lru" },
    { "path": "packages/pg-sql2" },
    { "path": "packages/postgraphile-core" },
    { "path": "packages/postgraphile" },
    { "path": "packages/subscriptions-lds" },
    { "path": "packages/pg-pubsub" }
  ]
}
