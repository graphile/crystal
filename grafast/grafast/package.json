    "@types/chai": "^4",
    "@types/jest": "^27.5.1",
    "@types/license-checker-webpack-plugin": "^0",
    "@types/lodash": "^4.14.178",
    "@types/mermaid": "^8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.5",
    "@types/nodemon": "1.19.1",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "iterall": "^1.3.0",
    "jest": "^28.1.3",
    "license-checker-webpack-plugin": "^0.2.1",
